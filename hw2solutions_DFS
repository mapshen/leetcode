"""
# Definition for a Node.
class Node:
    def __init__(self, val, children):
        self.val = val
        self.children = children
"""
class Solution:
    def maxDepth(self, root: 'Node') -> int:
        if not root:
            return 0
        else:
            maxnum = 0
            for w in root.children:
                maxnum = max(self.maxDepth(w),maxnum)
            maxnum = maxnum + 1
            return maxnum
