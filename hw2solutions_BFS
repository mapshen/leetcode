"""
# Definition for a Node.
class Node:
    def __init__(self, val, children):
        self.val = val
        self.children = children
"""
class Solution:
    def maxDepth(self, root: 'Node') -> int:
        queue = []
        if not root:
            return 0
        else:
            queue.append(root)
            max = 0
            while queue:
                a = len(queue)
                for i in range(a):
                    for w in queue[0].children:
                        queue.append(w)
                    queue.pop(0)
                max = max + 1
            return max
            
                    
                    
        
